        "import random\n",
        "x = random.randrange(1, 100)\n",
        "c = 1\n",
        "print(f'Компьютер загадал число: ({x})')\n",
        "flag = True\n",
        "while flag:\n",
        "  print(\"Ввод пользователя: \")\n",
        "  i = input()\n",
        "  if i.isdigit():\n",
        "    i = int(i)\n",
        "    if i > x:\n",
        "      print(\"Ваше число больше!\")\n",
        "      c += 1\n",
        "    elif i < x:\n",
        "      print(\"Ваше число меньше!\")\n",
        "      c += 1\n",
        "    elif i == x:\n",
        "      print(f'Поздравляем! Вы угадали число за {c} попытки!')\n",
        "      flag = False\n",
        "    elif i.lower() == \"выход\":\n",
        "      print(\"Конец игры.\")\n",
        "      flag = False\n",
        "  else:\n",
        "    print(\"Вы ввели не число.\")"
      ]
    }
